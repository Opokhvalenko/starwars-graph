{
	"name": "starwars-graph",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"postinstall": "playwright install",
		"proxy": "SW_API_BASE=https://sw-api.starnavi.io PORT=8787 tsx server.ts",
		"test:e2e": "playwright test",
		"test": "vitest",
		"test:run": "vitest run",
		"lint": "biome check src server.ts vite.config.ts playwright.config.ts",
		"lint:fix": "biome check src server.ts vite.config.ts playwright.config.ts --write",
		"fix:all": "npm run lint:css:fix && npm run sort:tw && npm run lint:fix",
		"lint:css": "stylelint \"src/**/*.{css,scss}\"",
		"lint:css:fix": "stylelint --fix \"src/**/*.{css,scss}\"",
		"sort:tw": "rustywind src --write",
		"typecheck": "tsc -b --pretty false"
	},
	"dependencies": {
		"@fastify/cors": "9.0.1",
		"@tanstack/react-query": "^5.90.7",
		"dagre": "0.8.5",
		"fastify": "4.28.1",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-router-dom": "6.28.0",
		"reactflow": "11.11.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@playwright/test": "1.48.2",
		"@storybook/addon-essentials": "8.3.5",
		"@storybook/react-vite": "8.3.5",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/react": "16.0.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/dagre": "0.7.52",
		"@types/react": "18.3.11",
		"@types/react-dom": "18.3.1",
		"@vitejs/plugin-react": "^4.3.3",
		"autoprefixer": "^10.4.21",
		"husky": "^9.1.6",
		"jsdom": "25.0.1",
		"lint-staged": "^15.2.10",
		"msw": "2.6.4",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"rustywind": "^0.24.3",
		"stylelint": "^16.25.0",
		"stylelint-config-standard": "^39.0.1",
		"stylelint-config-tailwindcss": "^1.0.0",
		"stylelint-order": "^7.0.0",
		"tailwindcss": "^4.1.17",
		"tsx": "4.19.2",
		"typescript": "5.6.3",
		"vite": "5.4.10",
		"vitest": "2.1.4"
	},
	"lint-staged": {
		"src/**/*.{css,scss}": [
			"stylelint --fix"
		],
		"src/**/*.{ts,tsx,jsx,html}": [
			"rustywind --write",
			"biome check --write"
		],
		"*.{json,md,yml,yaml}": [
			"biome check --write"
		]
	},
	"vitest": {
		"environment": "jsdom",
		"setupFiles": [
			"src/test/setup.ts"
		],
		"coverage": {
			"provider": "v8",
			"reportsDirectory": "coverage",
			"reporter": [
				"text",
				"lcov"
			],
			"exclude": [
				"src/**/*.stories.*",
				"src/test/**"
			]
		}
	}
}
